<div class="col s3">
  <div class="card">
    <div class="card-image center">
      <% if current_user.photo.attached? %>
        <img src="<%=(url_for(current_user.photo))%>" href="<%=gallery_user_path(current_gallery, current_user)%>" alt="user_profile">
        <% else %>
      <i class="large material-icons">account_box</i>
      <% end %>
      <a class="btn-floating halfway-fab waves-effect waves-light red" href="<%= edit_user_path(current_user) %>"><i class="material-icons">edit</i></a>
    </div>
    <div class="card-content">
      <span class="card-title"><%= link_to current_user.username, gallery_user_path(current_gallery, current_user) %></span>
      <p><%= current_user.email %></p>
      <p><%= "Gallery Admin" if gallery_admin? %></p>
    </div>
  </div>
</div>

<div class = "container">
<h3 class= "center">Sign up</h3>
<%= form_for @user, url: signup_path do |f| %>
    <div>
    <%= f.label :username %>
    <%= f.text_field :username, required: true %><br>
    </div>
    <div>
    <%= f.label :email %>
    <%= f.email_field :email, required: true %><br>
    </div>
    <div>
    <%= f.label :password, required: true %>
    <%= f.password_field :password %><br>
    </div>
    <div>
    <%= f.label :password_confirmation, required: true %>
    <%= f.password_field :password_confirmation %>
    </div>
    <div class="file-field input-field">
    <div class="btn"><i class="material-icons right">insert_photo</i>
    <span>Profile</span>
        <%= f.file_field :photo, direct_upload: true %>
      </div>
      <div class="file-path-wrapper">
        <input class="file-path validate" type="text" name="user[profile_photo]" accept="image/png, image/jpeg" >
      </div>
    </div>
    <br>
        <button class="btn waves-effect waves-light" type="submit" name="action">Sign up<i class="material-icons right">send</i>
  </button> 
<% end %>
</div>
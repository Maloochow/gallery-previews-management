

<h3><%= link_to "Clients", gallery_clients_path(current_gallery) %></h3>

<div class="input-field col s6">
<%= form_tag(gallery_clients_path(current_gallery), method: "get") do %>
    <i class="material-icons prefix">search</i>
    <input type="search" id="search", class="validate", placeholder="Search by App ID">
<% end %>
</div>

<a class="waves-effect waves-light btn" href="<%= new_gallery_client_path(current_gallery) %>"><i class="material-icons right">add</i>Add Client</a>
<br>
<br>

<% if @clients != [] %>
<table>
    <tr>
        <th>App ID</th>
        <th>Invited By</th>
        <th>Status</th>
        <th></th>
    </tr>
    <tbody>
    <%= render partial: 'client', collection: @clients %>
    </tbody>
</table>
<% else %>
    <h3>There is no client at the moment.</h3>
<% end %>